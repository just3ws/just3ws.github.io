---
layout: minimal
title: <%= Generators::Core::Text.yaml_quote(title) %>
description: <%= Generators::Core::Text.yaml_quote(intro) %>
breadcrumb: <%= Generators::Core::Text.yaml_quote(title) %>
<% if grandparent_name && grandparent_url %>
breadcrumb_grandparent_name: <%= Generators::Core::Text.yaml_quote(grandparent_name) %>
breadcrumb_grandparent_url: <%= grandparent_url %>
<% end %>
<% if parent_name && parent_url %>
breadcrumb_parent_name: <%= Generators::Core::Text.yaml_quote(parent_name) %>
breadcrumb_parent_url: <%= parent_url %>
<% end %>
---

<article class="page">
  {% include breadcrumbs.html %}
  <header>
    <h1><%= title %></h1>
    <p class="intro"><%= intro %></p>
  </header>
<% highlights_list = begin
  value = highlights
  value.is_a?(Array) ? value : []
rescue NameError
  []
end %>
<% notable_contributors_list = begin
  value = notable_contributors
  value.is_a?(Array) ? value : []
rescue NameError
  []
end %>
<% if highlights_list.is_a?(Array) && !highlights_list.empty? %>
  <section class="index-summary">
    <ul class="index-highlights">
<% highlights_list.each do |highlight| next if highlight.to_s.strip.empty? %>
      <li><%= highlight %></li>
<% end %>
    </ul>
  </section>
<% end %>

<% if conference_slug && !conference_slug.to_s.strip.empty? %>
  {% assign conference_resources = site.data.resources.conferences["<%= conference_slug %>"] %}
  {% if conference_resources %}
    <section class="index-summary">
      <h2>Trusted Sources</h2>
      <ul class="index-highlights">
        {% for resource in conference_resources %}
          <li><a href="{{ resource.url }}">{{ resource.label | default: resource.url }}</a></li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}
<% end %>

<% if notable_contributors_list.is_a?(Array) && !notable_contributors_list.empty? %>
  <section class="index-summary">
    <h2>Notable Contributors</h2>
    <ul class="index-highlights">
<% notable_contributors_list.each do |contributor| %>
      <li>
        <strong><%= contributor["name"] %></strong>
        <% if contributor["headline"] && !contributor["headline"].to_s.strip.empty? %> â€” <%= contributor["headline"] %><% end %>
        <% if contributor["focus"] && !contributor["focus"].to_s.strip.empty? %> Focus: <%= contributor["focus"] %><% end %>
        <% if contributor["interview_id"] && !contributor["interview_id"].to_s.strip.empty? %>
          <a href="/interviews/<%= contributor["interview_id"] %>/">Interview</a>
        <% end %>
      </li>
<% end %>
    </ul>
  </section>
<% end %>

  <%= liquid_assign %>
  {% for interview in items %}
    {% include interview-card.html interview=interview %}
  {% endfor %}
</article>
