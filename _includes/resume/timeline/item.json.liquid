{% assign position = site.data.resume.positions[include.timeline_item] %}

{
  "company": {{ position.company.name | jsonify }},
  "position": {{ position.title | jsonify }},
  "website": "",
  "startDate": {{ position.start_date | jsonify }},
  "endDate": {{ position.end_date | jsonify }},
  "summary": {{ position.description | jsonify }},
  "highlights": [
    {% if position.achievements %}
      {% if position.achievements.highlights %}
        {% for achievement in position.achievements.highlights %}
          {{ achievement | jsonify }}
          {% unless forloop.last %},{% endunless %}
        {% endfor %}
      {% endif %}
    {% endif %}
  ]
}
